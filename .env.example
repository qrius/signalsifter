# Telegram API credentials (get from https://my.telegram.org/apps)
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Session name (stored in .session folder)
SESSION_NAME=telethon_session

# Database and storage paths (relative to container /app or local repo root)
SQLITE_DB_PATH=./data/backfill.sqlite
RAW_DIR=./data/raw
MEDIA_DIR=./data/media
OCR_DIR=./data/ocr
SUMMARIES_DIR=./data/summaries

# OpenAI API key (optional - for LLM-based summarization)
OPENAI_API_KEY=your_openai_api_key_here

# Bot name/branding (optional override)
BOT_NAME=signalsifter
